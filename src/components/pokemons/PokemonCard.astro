---
interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}
const { name, url, isBig = false } = Astro.props;
const id = url.split("/").at(-2);
const pokemonImg = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
const pokemonPage = `/pokemons/${name}`;
---

<a
  href={pokemonPage}
  class:list={[
    `rounded flex flex-col justify-center items-center p-2`,
    {
      border: !isBig,
    },
  ]}
>
  <img
    transition:name={`${name}-image`}
    class:list={[{ "w-30 h-30": isBig }, { "w-24 h-24": !isBig }]}
    src={pokemonImg}
    alt={`Imagen de ${name}`}
  />
  <span
    class:list={["text-center capitalize", { "text-4xl text-blue-300": isBig }]}
  >
    <span>#{id}</span>
    <span>{name}</span>
  </span>
</a>
